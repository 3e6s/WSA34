<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WSA34</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Almarai&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="images/الشعار_الرسمي_لكأس_العالم_بالسعودية_2034.png" alt="World Cup Logo" width="60" height="60">
                    <strong class="p-1 text-white">أهلا بالعالم</strong>
                </div>
                <ul class="list-inline mb-0 social-icons">
                    <a href="/Home/Index"><strong class="p-2 text-white">الصفحة الرئيسية</strong></a>
                    <li class="list-inline-item p-1"><i class="bi bi-whatsapp fs-4 text-white"></i></li>
                    <li class="list-inline-item p-1"><i class="bi bi-telephone fs-4 text-white"></i></li>
                    <li class="list-inline-item p-1"><i class="bi bi-snapchat fs-4 text-white"></i></li>
                    <li class="list-inline-item p-1"><i class="bi bi-twitter-x fs-4 text-white"></i></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <p class="mb-0">جميع الحقوق محفوظة لدى أكاديمية طويق © 2024</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
