            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 1000px;
        }

        img {
            display: block;
            margin: 20px auto;
            border-radius: 10px;
            max-width: 100%;
            height: auto;
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 15px;
            color: rgb(85, 32, 134);
            text-align: center;
        }

        p {
            line-height: 2;
            text-align: justify;
            margin-bottom: 15px;
        }

        .card {
            height: auto;
            margin: 10px;
            text-align: center;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            overflow: hidden;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-radius: 5px;
            }

        a {
            text-decoration: none;
        }

        header {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: rgb(85, 32, 134);
            color: white;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
        }

            footer p {
                margin: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
            }

        .social-icons i:hover {
            color: #ffcc00;
            transform: scale(1.2);
        }
