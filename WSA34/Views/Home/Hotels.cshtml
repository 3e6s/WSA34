@using WorldCup.Models
@model IEnumerable<Hotels>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body dir="rtl" style="position: relative; background-color: #f5f5f5; background-size: cover; background-repeat: no-repeat; background-position: center;">
    <main>
        <div class="container mx-auto py-8">
            <!-- نص العنوان المتحرك -->
            <div class="row mt-4 justify-content-center text-center">
                <div style="width: 100%; max-width: 90%; margin: 0 auto;">
                    <p class="typing-animation text-2xl font-bold text-blue-700 mb-6">
                        تعرف على الفنادق
                    </p>
                </div>
            </div>

            <!-- شبكة البطاقات -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var hotel in Model)
                {
                    <div class="bg-white shadow-lg rounded-2xl overflow-hidden text-right">
                        <img src="@hotel.Icon" alt="@hotel.Name" class="w-full h-48 object-cover" />
                        <div class="p-4">
                            <h3 class="text-xl font-semibold mb-2">@hotel.Name</h3>
                            <p class="text-gray-600 mb-1">المدينة: @hotel.City</p>
                            <p class="text-yellow-500 font-semibold mb-1">التقييم: @hotel.Rating نجوم</p>
                            <p class="text-gray-600 mb-4">@hotel.Description</p>
                            <p class="text-lg font-bold text-green-600 mb-4">@hotel.PricePerNight ريال / الليلة</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>
</body>
